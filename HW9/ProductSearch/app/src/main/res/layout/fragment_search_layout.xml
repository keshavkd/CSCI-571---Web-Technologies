<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:focusableInTouchMode="true">    <android.support.v4.widget.NestedScrollView        android:id="@+id/searchScroll"        android:layout_width="match_parent"        android:layout_height="match_parent"        app:layout_behavior="@string/appbar_scrolling_view_behavior">        <LinearLayout            android:id="@+id/mainLayout"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:animateLayoutChanges="true"            android:orientation="vertical">            <!-- TODO: Update blank fragment layout -->            <TextView                android:id="@+id/textView2"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="15dp"                android:text="Keyword"                android:textSize="14sp" />            <EditText                android:id="@+id/keyword"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:ems="20"                android:hint="Enter Keyword"                android:inputType="textPersonName"                android:textSize="16sp" />            <TextView                android:id="@+id/error1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:text="Please enter mandatory field"                android:textColor="@color/red"                android:textSize="14sp" />            <TextView                android:id="@+id/textView3"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="5dp"                android:text="Category"                android:textSize="14sp" />            <Spinner                android:id="@+id/category"                android:layout_width="fill_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:dropDownWidth="wrap_content" />            <TextView                android:id="@+id/textView4"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="5dp"                android:text="Condition"                android:textSize="14sp" />            <LinearLayout                android:id="@+id/cond_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:orientation="horizontal">                <CheckBox                    android:id="@+id/newc"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:text="New" />                <CheckBox                    android:id="@+id/used"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:text="Used" />                <CheckBox                    android:id="@+id/uspec"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:text="Unspecified" />            </LinearLayout>            <TextView                android:id="@+id/textView5"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="5dp"                android:text="Shipping" />            <LinearLayout                android:id="@+id/ship_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:orientation="horizontal">                <CheckBox                    android:id="@+id/loc"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:text="Local Pickup" />                <CheckBox                    android:id="@+id/free"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:text="Free Shipping" />            </LinearLayout>            <LinearLayout                android:id="@+id/ens_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="5dp"                android:orientation="horizontal">                <TextView                    android:id="@+id/textView7"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Enable Nearby Search" />                <CheckBox                    android:id="@+id/ens"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_weight="1"                    android:onClick="ensClick" />            </LinearLayout>            <LinearLayout                android:id="@+id/ens_enable_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="15dp"                android:layout_marginTop="5dp"                android:orientation="vertical">                <EditText                    android:id="@+id/distance"                    android:layout_width="380dp"                    android:layout_height="wrap_content"                    android:ems="10"                    android:hint="Miles From"                    android:inputType="numberSigned"                    android:textSize="16sp" />                <TextView                    android:id="@+id/textView8"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="From" />                <RadioGroup                    android:id="@+id/radioGroup"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp">                    <RadioButton                        android:id="@+id/cur_loc"                        android:layout_width="wrap_content"                        android:layout_height="20dp"                        android:layout_marginTop="5dp"                        android:layout_weight="0"                        android:onClick="curClick"                        android:text="Current Location"                        android:textSize="14sp" />                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_weight="0"                        android:orientation="horizontal">                        <RadioButton                            android:id="@+id/cus_loc"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginTop="5dp"                            android:layout_weight="0"                            android:onClick="cusClick" />                        <AutoCompleteTextView                            android:id="@+id/zipcode"                            android:layout_width="160dp"                            android:layout_height="wrap_content"                            android:layout_weight="0"                            android:textSize="16sp"/>                    </LinearLayout>                    <TextView                        android:id="@+id/error2"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="15dp"                        android:text="Please enter mandatory field"                        android:textColor="@color/red"                        android:textSize="14sp" />                </RadioGroup>            </LinearLayout>            <LinearLayout                android:id="@+id/form_btn_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="25dp"                android:layout_marginTop="5dp"                android:layout_marginRight="25dp"                android:orientation="horizontal">                <Button                    android:id="@+id/searchBtn"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginRight="5dp"                    android:layout_weight="1"                    android:onClick="searchBtn"                    android:paddingTop="20dp"                    android:paddingBottom="20dp"                    android:text="Search"                    android:textColor="@color/white"                    app:backgroundTint="@color/br_orange" />                <Button                    android:id="@+id/clearBtn"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:onClick="clearBtn"                    android:paddingTop="20dp"                    android:paddingBottom="20dp"                    android:text="Clear"                    android:textColor="@color/white"                    app:backgroundTint="@color/br_orange" />            </LinearLayout>        </LinearLayout>    </android.support.v4.widget.NestedScrollView></LinearLayout>